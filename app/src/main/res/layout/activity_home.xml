<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/pale_blue_white">

    <TextView
        android:id="@+id/txtTitleHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Secret Diary"
        android:textSize="32sp"
        android:fontFamily="@font/quicksand_semibold"
        android:textStyle="italic"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.05" />

    <EditText
        android:id="@+id/edtSearchHome"
        android:layout_width="364dp"
        android:layout_height="48dp"
        android:background="@drawable/frame_btn_search"
        android:drawableStart="@drawable/ic_search_24"
        android:drawablePadding="8dp"
        android:hint="Search"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColorHint="#888888"
        android:textSize="16sp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTitleHome" />

    <ImageView
        android:id="@+id/imgNoteHome"
        android:layout_width="200dp"
        android:layout_height="130dp"
        android:src="@drawable/img_center_home"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/txtNoteHome"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:text="Start your journaling journey by adding your first entri!"
        android:textSize="16sp"
        android:fontFamily="@font/quicksand_semibold"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/imgNoteHome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="visible"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@+id/edtSearchHome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listNoteDiary"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

    </LinearLayout>
    
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.95">

        <TextView
            android:id="@+id/btnNewDiary"
            android:layout_width="160dp"
            android:layout_height="64dp"
            android:text="New Diary"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:paddingStart="16dp"
            android:fontFamily="@font/quicksand_medium"
            android:gravity="center"
            android:background="@drawable/frame_btn_newdiary"
            android:drawableStart="@drawable/plus1" />
        
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>